<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginBottom="4dp"
    android:layout_marginTop="4dp"
    android:elevation="4dp"
    android:background="@color/purple_200">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="8dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/reward_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_reward_white" />

            <TextView
                android:id="@+id/coupen_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="คูปองลดราคา"
                android:textStyle="bold"
                android:layout_marginStart="8dp"
                android:textColor="@color/white"
                android:fontFamily="@font/proregular"
                android:textSize="14sp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/coupen_validity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="หมดอายุ 30 เมษายน 2562"
                android:textAlignment="textEnd"
                android:textStyle="bold"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:textColor="@color/purple_200"
                android:fontFamily="@font/proregular"
                android:textSize="14sp"/>

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/coupen_body"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="16dp"
        android:fontFamily="@font/proregular"
        android:text="มาไวได้ไว รีบใช้ก่อนจะหมด! รับโค๊ดส่วนลด 30% ขั้นต่ำ 5,000 บาท สูงสุด"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:textStyle="bold" />

</LinearLayout>